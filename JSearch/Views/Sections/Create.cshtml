@model JSearch.ViewModels.SectionsViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create New Section</h2>

<div class="row">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(s => s.SectionName)
        @Html.TextBoxFor(s => s.SectionName, new { @class="form-control" })
        @Html.ValidationMessageFor(s => s.SectionName)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.SectionRemarks)
        @Html.TextBoxFor(s => s.SectionRemarks, new { @class = "form-control" })
    </div>
    <div class="form-group">

    </div>
}
</div>
