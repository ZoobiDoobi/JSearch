@model JSearch.ViewModels.CourtsViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Information</h2>
@using (Html.BeginForm("Edit","Courts"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Court</h4>
        <hr />
        @Html.ValidationSummary(true," ", new { @class="text-danger"})
        @Html.HiddenFor(c => c.CourtId)
        <div class="form-group">
            @Html.LabelFor(c => c.CourtName)
            @Html.TextBoxFor(c => c.CourtName, new { @class = "form-control", autofocus = "autofcous" })
            @Html.ValidationMessageFor(c => c.CourtName)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.CourtRemarks)
            @Html.TextBoxFor(c => c.CourtRemarks, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.CourtStatus)
            @Html.TextBoxFor(c => c.CourtStatus, new { @class = "form-control",placeholder="0 or 1" })
            @Html.ValidationMessageFor(c => c.CourtStatus)
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-lg" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

